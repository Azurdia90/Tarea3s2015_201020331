<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tV_3"
        android:id="@+id/tV_3"
        android:textSize="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eT_entrada"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tV_3"
        android:layout_margin="50dp"
        android:minHeight="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Baceptar"
        android:id="@+id/B_aceptar"
        android:textSize="25dp"
        android:layout_below="@+id/eT_entrada"
        android:layout_centerHorizontal="true"
        android:onClick="accion2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tV_salida"
        android:layout_below="@+id/B_aceptar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#ffffffff" />

</RelativeLayout>